<!-- miniprogram/pages/mycenter/mycenter.wxml -->
<!-- 设置账号昵称和信息 -->
<view class="amountBg">
    <view class="img">
        <image src="../../images/icon/grzx/tx.png" style="width:49px;height:47px;" />
    </view>
    <view class="account">
        <view>{{userInfo.nickName}}</view>
        <view>账号管理</view>
    </view>
    <view class="nav"></view>
</view>
<!-- 设计四个导航条 -->
<view class="content">
    <view class="order">
        <view class="desc">
            <view>
                <image src="../../images/icon/grzx/hcpdd.png" style="width:22px;height:25px;" />
            </view>
            <view>火车票预订</view>
        </view>
        <view class="desc">
            <view>
                <image src="../../images/icon/grzx/qpdd.png" style="width:22px;height:25px;" />
            </view>
            <view>抢票订单</view>
        </view>
        <view class="desc">
            <view>
                <image src="../../images/icon/grzx/jpdd.png" style="width:22px;height:25px;" />
            </view>
            <view>机票订单</view>
        </view>
        <view class="desc">
            <view>
                <image src="../../images/icon/grzx/qbdd.png" style="width:22px;height:25px;" />
            </view>
            <view>全部订单</view>
        </view>
    </view>
    <!-- 六个导航栏 -->
    <view class="clear"></view>
    <view class="item">
        <view class="icon">
            <image src="../../images/icon/grzx/wdcf.png" style="width:22px;height:21px;" />
        </view>
        <view class="itemName">
            <view>我的财富</view>
            <view class="remark">0个加速币</view>
        </view>
        <view class="right">
            <text class="opr">领取加速包</text>>
        </view>
    </view>
    <view class="line"></view>
    <view class="item">
        <view class="icon">
            <image src="../../images/icon/grzx/cxfw.png" style="width:22px;height:21px;" />
        </view>
        <view class="itemName">
            <view>出行服务</view>
        </view>
        <view class="right">
            <text class="opr">正晚点/时刻表</text>>
        </view>
    </view>
    <view class="hr"></view>
    <view class="item">
        <view class="icon">
            <image src="../../images/icon/grzx/yqhy.png" style="width:22px;height:21px;" />
        </view>
        <view class="itemName">
            <view>邀请好友</view>
        </view>
        <view class="right" bindtap="grabTicket">
            <text class="orp">一起来抢票</text>>
        </view>
    </view>
    <view class="hr"></view>
    <view class="item">
        <view class="icon">
            <image src="../../images/icon/grzx/xxzx.png" style="width:22px;height:21px;" />
        </view>
        <view class="itemName">
            <view>消息中心</view>
        </view>
        <view class="right">
            <text class="orp">在线服务</text>>
        </view>
    </view>
    <view class="hr"></view>
    <view class="item">
        <view class="icon">
            <image src="../../images/icon/grzx/cpyj.png" style="width:22px;height:21px;" />
        </view>
        <view class="itemName">
            <view>产品意见</view>
        </view>
        <view class="right">></view>
    </view>
    <view class="hr"></view>
    <view class="item">
        <view class="icon">
            <image src="../../images/icon/grzx/gd.png" style="width:22px;height:21px;" />
        </view>
        <view class="itemName">
            <view>更多</view>
        </view>
        <view class="right">></view>
    </view>
</view>